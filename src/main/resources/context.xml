<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.sbrf.reboot.spring.Client">
        <constructor-arg name="name" value="jerry"></constructor-arg>
        <constructor-arg name="account" ref="account"></constructor-arg>
    </bean>
    <bean id="account" class="com.sbrf.reboot.spring.Account2">
        <constructor-arg name="accountId" type="long" value="1"></constructor-arg>
    </bean>

</beans>